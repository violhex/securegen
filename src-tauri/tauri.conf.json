{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "securegen",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": false,
        "show": true,
        "hide": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "process": {
        "all": false,
        "exit": true
      },
      "os": {
        "all": false
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "fs": {
        "all": false,
        "createDir": true,
        "writeFile": true,
        "scope": ["$DOCUMENT/*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "open": false,
        "save": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://httpbin.org/*",
          "https://api.ipify.org/*",
          "https://ipinfo.io/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "identifier": "win.secgen.app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": false,
        "title": "SecureGen",
        "width": 1200,
        "decorations": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "title": "SecureGen"
    }
  }
}
